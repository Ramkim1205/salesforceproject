<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>62.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Hero Background</masterLabel>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property name="resourceUrl" type="String" label="Video URL" 
                      default="https://kr.prd.image.homepage.torder.com/videos/1ae5ff84-2af2-4f07-80a9-866b0796787e.mp4"/>
            <property name="title" type="String" label="Title" default="Electra Series"/>
            <property name="slogan" type="String" label="Slogan" default="Ride With Power"/>
            <property name="buttonText" type="String" label="Button Text" default="See Electra Bikes"/>
            <property name="heroDetailsPosition" type="String" label="Hero Text Block Position" datasource="left,right,center" default="center"/>
            <property name="overlay" type="Boolean" label="Overlay" default="false"/>
            <property name="opacity" type="Integer" label="Overlay Opacity" min="0" max="10" default="5"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>